<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
 
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
  	    android:layout_gravity="center_horizontal">

		<ImageView
		    android:id="@+id/ic_logo"
		    android:layout_width="110dip"
		    android:layout_height="130dip"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:src="@drawable/ic_logo" />

		<EditText
		    android:id="@+id/layout_login_email"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ic_logo"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="21dp"
		    android:ems="10"
		    android:inputType="textEmailAddress" >

		    <requestFocus />
		</EditText>

		<EditText
		    android:id="@+id/layout_login_passwd"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/layout_login_email"
		    android:layout_alignLeft="@+id/layout_login_email"
		    android:layout_alignRight="@+id/layout_login_email"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="21dp"
		    android:ems="10"
		    android:inputType="textPassword" />

		<Button
		    android:id="@+id/layout_login_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/layout_login_passwd"
		    android:layout_alignRight="@+id/layout_login_passwd"
		    android:layout_below="@+id/layout_login_passwd"
		    android:layout_marginBottom="21dp"
		    android:background="#E1E0DE"
		    android:text="登录" />

		<View
		    android:layout_margin="20dp"
		    android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:layout_below="@+id/layout_login_button"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="80dp"
		    android:background="#115199" />

    </RelativeLayout> 

	<!-- Author -->
    <TextView android:id="@+id/layout_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Pigeon"
        android:textSize="11sp"/> 
</RelativeLayout>
