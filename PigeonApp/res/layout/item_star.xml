<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"  
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/star_nickname"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="刘水"
        android:textColor="#313233"
        android:textSize="16dp" />
    
    <RelativeLayout
        android:layout_toRightOf="@+id/star_nickname"
        android:layout_width="190dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/star_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="xgb99@outlook.com"
            android:textColor="#313233"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/star_userid"
            android:layout_below="@+id/star_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="No. 13434"
            android:textColor="#545454"
            android:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>
